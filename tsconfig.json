{
  "compilerOptions": {
    "target": "es2016",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "rootDir": "./",
    "baseUrl": "./src",
    "module": "commonjs",
    "paths": {
      "@modules/": ["modules/"],
      "@config/": ["config/"],
      "@shared/": ["shared/"],
      "@errors/": ["Errors/"],
      "@utils/": ["utils/"]
    },
    "resolveJsonModule": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  }
}